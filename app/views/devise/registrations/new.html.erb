<h2 class="md-4">新規会員登録画面</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   


   <b>名前</b>
      <div class="field">
      <%= f.label :first_name, "(姓)" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>

      <%= f.label :last_name, "(名)" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>

      <b>フリガナ</b>
      <div class="field mt-2">
      <%= f.label :first_name_kana, "(セイ)" %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name" %>

      <%= f.label :last_name_kana, "(メイ)" %>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last__name" %>
      </div>

      <div class="field mt-3">
      <%= f.label :email, "メールアドレス", style:"font-weight:bold" %><br />
      <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field mt-3">
      <%= f.label :postal_code, "郵便番号(ハイフン無し)", style:"font-weight:bold" %><br />
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>

      <div class="field mt-3">
      <%= f.label :address, "住所", style:"font-weight:bold" %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>

      <div class="field mt-3">
      <%= f.label :telephone_number, "電話番号(ハイフン無し)", style:"font-weight:bold" %><br />
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
      </div>

    <div class="field mt-3">
      <%= f.label :password, "パスワード(6文字以上)", style:"font-weight:bold" %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field mt-3">
      <%= f.label :password_confirmation, "パスワード(確認用)", style:"font-weight:bold" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  


  <div class="actions mt-4">
    <%= f.submit "新規登録", class: "btn btn-primary" %>

<% end %>

<h3>すでに登録済みの方</h3>
<p><%= link_to "こちら", customer_session_path %>から登録をお願いします</p>


<%= render "devise/shared/links" %>
