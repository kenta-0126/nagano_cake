<div class="container">
        <h3>ジャンル一覧・追加</h3>
  <div class="row">


          
            <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
            
            <label class="label-name col-md-4">ジャンル名</label>
            <%= f.text_field :name, class: "col-md-4", placeholder: "ジャンル名" %>
            <%= f.submit "新規登録", class: "btn btn-success" %>
            <% end %>
            
        <table class="table">
            <thead class="table-secondary">
              <tr>
                <th>ジャンル</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>

        　　　<tr>
        　　　  <td><%= genre.name %></td>
        　　　  <td><%= link_to "編集する", edit_admin_genre_path(genre),  class: "btn btn-success" %></td>

        　　　</tr>

        　　　<% end %>


  </div>
</div>