<h2 class="pb-2 mb-4">商品詳細</h2>

<div class="row">
  <div class="col-6">
    <%= attachment_image_tag @item, :image, format: 'jpeg', fallback: "ithigo.jpg", style: "max-width: 100%"%>
  </div>
  <div class="col-6">
    <table class="table">
    <tr>
        <th>商品名</th>
        <td><%= @item.name %></td>
    </tr>
    <tr>
        <th>紹介文</th>
        <td><%= @item.introduction %></td>
    </tr>
    <tr>
        <th>税抜き価格</th>
        <td><%= @item.price %></td>
    </tr>
    <tr>
        <th>商品種別</th>
        <td><%= @item.genre.name %></td>
    </tr>
    <tr>
        <th>販売ステータス</th>
        <td><%= @item.is_active %></td>
    </tr>
    </table>
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-info"%>
  </div>
</div>