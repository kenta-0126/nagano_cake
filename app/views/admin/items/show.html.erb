<div class="container">

    <h2 class="pb-2 mb-4">商品詳細</h2>

    <div class="row d-flex">
      <div class="col-6">
        <%= attachment_image_tag @item, :image, format: 'jpeg', style: "max-width: 70%"%>
      </div>
      <div class="col-md-6 h5">
        <table class="table table-borderless">
        <tr>
            <th>商品名</th>
            <td class="font-weight-bold"><%= @item.name %></td>
        </tr>

        <tr>
            <th>商品説明</th>
            <td class="font-weight-bold"><%= @item.introduction %></td>
        </tr>

        <tr>
            <th>ジャンル</th>
            <td class="font-weight-bold"><%= @item.genre.name %></td>
        </tr>

        <tr>
            <th>税抜き価格<br>(税込み価格)</th>
            <td class="font-weight-bold"><%= @item.price.to_s(:delimited, delimiter: ',') %>(<%= (@item.price* 1.1).floor.to_s(:delimited, delimiter: ',') %>)円</td>
        </tr>

        <tr>
            <th>販売ステータス</th>
            <td class="font-weight-bold"><%= @item.is_active %></td>
        </tr>

        </table>

                <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success btn-lg"%>
        </div>
      </div>
    </div>
</div>