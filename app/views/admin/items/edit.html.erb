<h1>商品編集</h1>
<%= form_for @item, url: admin_item_path(@item), local:true do |f| %>
    
    <div class="form-group has-icon">
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control" %>
      
    </div>
    <div class="form-group has-icon">
      <%= f.label :image %><br />
      <%= f.attachment_field :image %>
      
    </div>
    <div class="form-group has-icon">
      <%= f.label :genre_name %>
      <%= f.select :genre_id, Genre.all.collect { |g| [ g.name, g.id ] }, {}, {class: 'form-control'} %>
      
    </div>
    <div class="form-group has-icon">
      <%= f.label :price %>
      <%= f.text_field :price, class:"form-control" %>
      
    </div>
    <div class="form-group has-icon">
      <%= f.radio_button :is_active, :on_sale %>
  　　 <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
  　　 <%= f.radio_button :is_active, :off_sale %>
  　　 <%= f.label :is_active, "無効", {value: :false, style: "display: inline-block;"} %>
      
    </div>
    <%= f.submit "変更を保存", class:"btn btn-primary btn-block btn-base-1 mt-20" %>
  <% end %>