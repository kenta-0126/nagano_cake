<h2>会員一覧</h2>

<table class="table table-hover teable-inverse">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
　　　<% @customers.each do |customer| %>
　　　<tr>
　　　  <td><%= customer.id %></td>
　　　  <td><%= link_to customer.full_name, admin_customer_path(customer)%></td>
　　　  <td><%= customer.email %></td>
　　　 
    　　　<% if customer.deleted_at %>
      　削除済み
    　　<% end %>
　　　  
　　　</tr>
    　　<br>
　　　<% end %>