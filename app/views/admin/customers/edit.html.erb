<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h1><%= @customer.full_name %>さんの会員情報編集</h1>
        <div id="error_explanation">
            <% if @customer.errors.any? %>
          <h3><%= @customer.errors.count %>errors prohibited this obj from being saved:</h3>
          <% @customer.errors.full_messages.each do |message| %>
        　　<li><%= message %></li>
          <% end %>
        <% end %>

        <%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
         <table class="table table-borderless">
           <tr>
              <th class="col-xs-2">会員ID</th>
              <td class="col-xs-10"><%= @customer.id %></td>
           </tr>

           <div class="form-group">
            <tr>
              <th for="inputName">氏名</th>
              <td>
                <%= f.text_field :first_name, autofocus: true, id:"inputFirst_name", placeholder:"姓" %>　<%= f.text_field :last_name, autofocus: true, id:"inputLast_name", placeholder:"名" %>
              </td>
            </tr>
           </div>

           <div class="form-group">
            <tr>
              <th>フリガナ</th>
              <td>
                <%= f.text_field :first_name_kana, autofocus: true, id:"inputFirst_name_kana", placeholder:"セイ" %> <%= f.text_field :last_name_kana, autofocus: true, id:"inputLast_name_kana", placeholder:"メイ" %>
              </td>
            </tr>
           </div>

           <div class="form-group">
            <tr>
             <th for="inputPostal_code">郵便番号</th>
             <td>
               <%= f.text_field :postal_code, autofocus: true, id:"inputPostal_code", placeholder:"郵便番号" %>
             </td>
            </tr>
           </div>

           <div class="form-group">
            <tr>
              <th for="inputAddress">住所</th>
              <td>
                <%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder:"住所" %>
              </td>
            </tr>
           </div>

           <div class="form-group">
            <tr>
              <th for="inputTelephone_number">電話番号</th>
              <td>
                <%= f.text_field :telephone_number, autofocus: true, id:"inputTelephone_number", placeholder:"電話番号" %>
              </td>
            </tr>
           </div>

           <div class="form-group">
            <tr>
              <th for="inputEmail">メールアドレス</th>
              <td>
                <%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス" %>
              </td>
            </tr>
           </div>

           <div class="form-group has-icon">
             <tr>
               <th>会員ステータス</th>
               <td>
                 <%= f.radio_button :is_active, :on_sale %>
              　　 <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
              　　 <%= f.radio_button :is_active, :off_sale %>
              　　 <%= f.label :is_active, "無効", {value: :false, style: "display: inline-block;"} %>
               </td>
             </tr>
           </div>

           <div class="form-group">
             <th></th>
             <td>
               <%= f.submit "変更を保存", class: "btn btn-secondary d-flex align-items-end" %>
             </td>
           </div>

        </div>


        <% end %>

</div>
  </div>
</div>