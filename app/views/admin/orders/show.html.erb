<div class="col-xs-10 col-xs-offset-1">
  <div class="row">
      <h2>注文明細</h2>


  <div class="col-xs-7">
    <table class="table">
      <tbody>
      <tr>
        <th>購入者</th>
        <td><%= link_to admin_customer_path(@order.customer) do %>
        <%= @order.customer.first_name %>
        <%= @order.customer.last_name %>
        <% end %>
        </td>
      </tr>

      <tr>
        <th>注文日</th>
        <td><%= @order.created_at %></td>
      </tr>

      <tr>
        <th>配送先</th>
        <td>〒<%= @order.postal_code %><%= @order.address %><br>
            <%= @order.name %>
        </td>
      </tr>

      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method %></td>
      </tr>

      <tr>
        <th>注文ステータス</th>
        <td>
        <%= form_with model: @order, url: admin_order_path(@order), local: true do |f| %>
        <%= f.select :status, Order.statuses.keys.to_a %>
        <%= f.submit "更新", class: "btn btn-success" %>
        <% end %>
        </td>
      </tr>

    </tbody>
  </table>

      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>


        <tbody>
      <% @order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= (order_item.tax_price).floor.to_s(:delimited, delimiter: ',') %></td>
            <td><%= order_item.amount %></td>
            <td><%= (order_item.tax_price * order_item.amount.to_i).floor.to_s(:delimited, delimiter: ',') %></td>
            <td>
              <%= form_with model: order_item, url: admin_order_item_path(order_item), local: true do |f|  %>
              <%= f.select :making_status, OrderItem.making_statuses.keys.to_a %>
              <%= f.submit '更新',class:"btn btn-success" %>
              <% end %>
            </td>
          </tr>

          <% end %>
        </tbody>
      </table>
    </div>

    <br><br><br><br><br><br><br><br><br><br>
    <div class="col-xs-4">
      <table class="table">
        <tbody>

          <tr>
            <td>商品合計</td>
            <td><% @sum = 0 %>
                <% @order.order_items.each do |order_item| %>
                <% @sum += order_item.tax_price* order_item.amount.to_i  %>
              <% end %>
              ¥<%= @sum.to_s(:delimited, delimiter: ',') %></td>
          </tr>

          <tr>
            <td>送料</td>
            <td><%= @order.postage.to_s(:delimited, delimiter: ',') %></td>
          </tr>

          <tr>
            <td>請求合計金額</td>
            <td><%= (@sum += @order.postage).to_s(:delimited, delimiter: ',') %></td>
          </tr>
        </tbody>
      </table>
     </div>
    </div>
  </div>