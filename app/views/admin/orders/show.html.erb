<div class="container">
  <div class="row">
  　<h2>注文履歴詳細</h2>
    　<div class="col-md-10 col-md-offset-1">


        <div class="col-xs-7">
          <label>注文情報</label>
          <table class="table table-bordered">
            <tbody>
            <tr>
              <th class="table-secondary">注文日</th>
              <td><%= @order.created_at.strftime("%Y年%-m月%-d日 %-H時%-M分%-S秒") %></td>
            </tr>
            
            <tr>
              <th class="table-secondary">配送先</th>
              <td>〒<%= @order.postal_code %><%= @order.address %><br>
                  <%= @order.name %>
              </td>
            </tr>
      
            <tr>
              <th class="table-secondary">支払方法</th>
              <td><%= @order.payment_method %></td>
            </tr>
      
            <tr>
              <th class="table-secondary">ステータス</th>
              <td>
              <%= form_with model: @order, url: admin_order_path(@order), local: true do |f| %>
              <%= f.select :status, Order.statuses.keys.to_a %>
              <%= f.submit "更新", class: "btn btn-success" %>
              <% end %>
              </td>
            </tr>
      
            </tbody>
          </table>
          </div>
          
           <div class="col-xs-7">
            <table class="table table-bordered">
              <thead class="table-secondary">
                <tr>
                  <th>商品名</th>
                  <th>単価（税込）</th>
                  <th>数量</th>
                  <th>小計</th>
                </tr>
              </thead>
      
              <tbody>
                <% @order_items.each do |order_item| %>
                <tr>
                  <td><%= order_item.item.name %></td>
                  <td><%= (order_item.tax_price).floor.to_s(:delimited, delimiter: ',') %></td>
                  <td><%= order_item.amount %></td>
                  <td><%= (order_item.tax_price * order_item.amount.to_i).floor.to_s(:delimited, delimiter: ',') %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          
          
          <lebel>請求情報</lebel>
            <table class="table table-bordered">
              <tbody>
      
                <tr>
                  <th class="table-secondary">商品合計</th>
                  <td><% @sum = 0 %>
                      <% @order.order_items.each do |order_item| %>
                      <% @sum += order_item.tax_price* order_item.amount.to_i  %>
                    <% end %>
                    ¥<%= @sum.to_s(:delimited, delimiter: ',') %></td>
                </tr>
      
                <tr>
                  <th class="table-secondary">配送料</th>
                  <td><%= @order.postage.to_s(:delimited, delimiter: ',') %></td>
                </tr>
      
                <tr>
                  <th class="table-secondary">請求合計金額</th>
                  <td><%= (@sum += @order.postage).to_s(:delimited, delimiter: ',') %></td>
                </tr>
              </tbody>
            </table>
          </div>
    </div>
  </div>
</div>