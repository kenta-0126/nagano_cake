<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h1>配送先編集</h1>

      <%= form_with model: @address, local: true do |f| %>
      <table class="table table-borderless">
      <div class="form-group">
        <tr>
          <th for="inputPostal_code">郵便番号(ハイフンなし)</th>
          <td><%= f.text_field :postal_code, autofocus: true, id:"inputPostal_code", placeholder:"郵便番号(ハイフンなし)" %></td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <th for="inputAddress">住所</th>
          <td><%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder:"住所" %></td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <th for="inputName">宛名</th>
          <td><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"宛名" %></td>
          <td><%= f.submit "変更内容を保存", class: "btn btn-success" %></td>
        </tr>
      </div>

      </table>
      <% end %>

     </div>
   </div>
 </div>