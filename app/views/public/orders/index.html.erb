<h2>注文履歴一覧</h2>

<table class="table">
<tr>
  <th>注文日</th>
  <th>配送先</th>
  <th>注文商品</th>
  <th>支払金額</th>
  <th>ステータス</th>
  <th>注文詳細</th>
</tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at %></td>
    <td><%= order.postal_code %>
        <%= order.address %>
        <%=order.name %></td>
    <td><% order.order_items.each do |order_item| %><%= order_item.item.name %><% end %></td>
    <td>
      <% @sum = 0 %>
      <% order.order_items.each do |order_item| %>
        <% @sum += order_item.tax_price* order_item.amount.to_i  %>
      <% end %>
      <%= @sum += order.postage %>
    </td>
    <td><%= order.status %></td>
    <td><%= link_to "表示する", order_path(order) %></td>
  </tr>
<% end %>
</table>