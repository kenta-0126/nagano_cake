   <div class="container">
    <div class="row">
     <div class="col-md-10 col-md-offset-1">
      <h2 class="md-4">新規会員登録画面</h2>
      
      <%= form_with model: @customer, url: customer_registration_path, class: 'new_customer', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
         <table class="table table-borderless">
           <tr>
             <th>名前</th>
             <td>(姓)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", placeholder: "令和" %></td>
             <td>(名)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control", placeholder: "道子" %></td>
           </tr>
           
           <tr>
             <th>フリガナ</th>
             <td><%= f.label :first_name_kana, "(セイ)" %><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control", placeholder: "レイワ" %></td>
             <td><%= f.label :last_name_kana, "(メイ)" %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control", placeholder: "ミチコ" %></td>
           </tr>
           
           
           
           <tr>
             <th><%= f.label :email, "メールアドレス", style:"font-weight:bold" %></th>
             <td><%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %></td>
           </tr>
           
           <tr>
             <th><%= f.label :postal_code, "郵便番号(ハイフン無し)", style:"font-weight:bold" %></th>
             <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control", placeholder: "0000000" %></td>
           </tr>
           
           <tr>
             <th><%= f.label :address, "住所", style:"font-weight:bold" %></th>
             <td><%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control", placeholder: "東京都渋谷区代々木神園町0-0" %></td>
           </tr>
           
           <tr>
             <th><%= f.label :telephone_number, "電話番号(ハイフン無し)", style:"font-weight:bold" %></th>
             <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "form-control", placeholder: "0000000000" %></td>
           </tr>
           
           <tr>
             <th><%= f.label :password, "パスワード(6文字以上)", style:"font-weight:bold" %></th>
             <td><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></td>
           </tr>
           
           <tr>
             <th><%= f.label :password_confirmation, "パスワード(確認用)", style:"font-weight:bold" %></th>
             <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
           </tr>
           
           <tr>
             <th></th>
             <td><%= f.submit "新規登録",class: "btn btn-success btn-block" %></td>
           </tr>
         </table>
      
      <% end %>
      
      <h3>既に登録済みの方</h3>
      <p><%= link_to "こちら", customer_session_path %>から登録をお願いします</p>

    </div>
  </div>
</div>
