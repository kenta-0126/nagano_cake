<div class="body">
<h1 class="first_title">マイページ</h1>

<div class="mypage-info">
    <span class="mypage-title">登録情報</span>
    <%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-info" %>
</div>
<div class="mypage-center">
<table class ="table">
    <tbody>
        <tr>
            <th width="20%" class ="carum_title">氏名</th>
            <td class ="carum_date"><%= @customer.first_name %> <%= @customer.last_name %></td>
        </tr>
        <tr>
            <th class ="carum_title">カナ</th>
            <td class ="carum_date"><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
        </tr>
        <tr>
            <th class ="carum_title">郵便番号</th>
            <td class ="carum_date"><%= @customer.postal_code %></td>
        </tr>
        <tr>
            <th class ="carum_title">住所</th>
            <td class ="carum_date"><%= @customer.address %></td>
        </tr>
        <tr>
            <th class ="carum_title">電話番号</th>
            <td class ="carum_date"><%= @customer.telephone_number %></td>
        </tr>
        <tr>
            <th class ="carum_title">メールアドレス</th>
            <td class ="carum_date"><%= @customer.email %></td>
        </tr>
    </tbody>
</table>
     <div class="mypage-bottom">配送先
      <%= link_to "一覧を見る", addresses_path(@customer), class: "btn btn-info mypage-btn" %>
     </div>
     <br>
     <div class="mypage-bottom">注文履歴
      <%= link_to "一覧を見る", orders_path, class: "btn btn-info mypage-btn" %>
     </div>

  </div>
</div>