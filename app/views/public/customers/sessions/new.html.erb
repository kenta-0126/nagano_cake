   <div class="container">
    <div class="row">
     <div class="col-md-10 col-md-offset-1">
    <h2>ログイン</h2>

    <h3>会員の方はこちらからログイン</h3>

    <%= form_with(model: resource, scope: resource_name, url: session_path(resource_name)) do |f| %>
    <table class="table table-borderless text-center">
      <tr>
        <th>メールアドレス</th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      
      <tr>
        <th>パスワード</th>
        <td><%= f.password_field :password, autocomplete: "current-password" %></td>
      </tr>
      
      <div class="actions">
      <tr>
        <th></th>
        <td><%= f.submit "ログイン", class: "btn btn-secondary" %></td>
      </tr>
      </div>
    </table>
    <% end %>

    <h3 class="row">会員登録がお済でない方</h3>
    <p><%= link_to "こちら", new_customer_registration_path %>から登録をお願いします</p>
    
    
      </div>
    </div>
  </div>

