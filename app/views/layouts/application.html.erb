<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <div class="container">
          <ul>
            
            <% if customers_signed_in? %>
            
            <li class="nav-items">
              <%= link_to "マイページ", customers_my_page %>
            </li>
            
            <li class="nav-items">
              <%= link_to "商品一覧", items_path %>
            </li>
            
            <li class="nav-items">
              <%= link_to "カート",cart_items_path %>
            </li>
            
            <li class="nav-items">
              <%= link_to "ログアウト", destroy_customer_session_path %>
            </li>
            
            <% elsif admin_signed_in? %>
            
            <li class="nav-items">
              <%= link_to "商品一覧", admin_items_path %>
            </li>
            
            <li class="nav-items">
              <%= link_to "会員一覧", admin_customers_path %>
            </li>
            
            <li class="nav-items">
              <%= link_to "注文履歴一覧", admin_order_path %>
            </li>
            
            <li class="nav-items">
              <%= link_to "ジャンル一覧", admin_genres_path %>
            </li>
            
            <li class="nav-items">
              <%= link_to "ログアウト", destoroy_admin_session_path %>
            </li>
            
            <% else %>
            
            <li class="nav_items">
              <%= link_to "About", about_path %>
            </li>
            
            <li class="nav_items">
              <%= link_to "商品一覧", items_path %>
            </li>
            
            <li class="nav_items">
              <%= link_to "新規登録", new_customer_registration_path %>
            </li>
            
            <li class="nav_items">
              <%= link_to "ログイン", new_end_user_session_path %>
            </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
